        android:textColor="#99c184"
        android:background="#ece8de"
        android:textSize="15dp"

        />


    <Button
        android:id="@+id/che"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_x="190px"
        android:layout_y="900px"
